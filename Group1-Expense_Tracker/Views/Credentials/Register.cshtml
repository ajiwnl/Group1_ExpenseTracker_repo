@model Group1_Expense_Tracker.Models.Credentials

<div class="background flex h-screen w-screen items-center justify-center">
    <div class="credential-gradient h-full w-full drop-shadow-lg transition-all duration-1000 ease-in sm:w-2/3 sm:h-4/5 sm:rounded-xl md:w-1/3 md:h-3/4 md:rounded-xl">
        <div class="flex h-52 w-full flex-col items-center justify-center gap-5">
            <img src="/img/LogoEx.png" class="mt-5 h-24 w-24 rounded-full">
            <label class="font-sans text-2xl font-bold tracking-wide text-white drop-shadow-lg">REGISTER</label>
        </div>
        <form asp-action="Register" method="post" class="flex flex-col gap-5 px-12">
            <div class="flex flex-row items-center justify-center border-b border-zinc-400 px-4">
                <img src="/img/EmailIcon.png" class="h-5 w-5" />
                <input type="email" id="emailInput" placeholder="Email" asp-for="EmailAdd" class="w-full bg-transparent px-4 py-2 text-white placeholder:text-white focus:outline-none" />
            </div>

            <div class="flex flex-row items-center justify-center border-b border-zinc-400 px-4">
                <img src="/img/UserIcon.png" class="h-5 w-5"/>
                <input type="text" id="userInput" placeholder="Username" asp-for="Username" class="w-full bg-transparent px-4 py-2 text-white placeholder:text-white focus:outline-none" />
            </div>

            <div class="flex flex-row items-center justify-center border-b border-zinc-400 px-4">
                <img src="/img/LockIcon.png" class="h-5 w-5" />
                <input type="password" id="passwordInput" placeholder="Password" asp-for="Password" class="w-full bg-transparent px-4 py-2 text-white placeholder:text-white focus:outline-none" />
            </div>

            <div class="mt-5 flex flex-col items-center justify-center gap-3">
                <button type="submit" class="w-32 rounded-full bg-white py-2 text-gray-700 drop-shadow-lg">
                    Register
                </button>
                <label class="mt-3 text-center text-sm text-white">Already Have an Account? <a asp-area="" asp-controller="Credentials" asp-action="Login" class="underline">Login Here!</a></label>
            </div>
        </form>
    </div>
</div>